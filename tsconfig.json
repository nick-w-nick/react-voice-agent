{
    "compilerOptions": {
        "allowJs": true,
        "module": "NodeNext",
        "target": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "outDir": "dist",
        "declarationDir": "dist/types",
        "lib": ["ES6"],
        "strict": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "types": ["node"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist",
    ],
    "ts-node": {
        "esm": true,
    },
}
